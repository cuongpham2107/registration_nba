{
  "apps": [
    {
      "name": "laravel-server",
      "script": "/usr/bin/php",
      "args": "artisan serve --host=0.0.0.0 --port=8010",
      "cwd": "/var/www/registration_nba",
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "local"
      },
      "error_file": "/var/www/registration_nba/storage/logs/laravel-server-error.log",
      "out_file": "/var/www/registration_nba/storage/logs/laravel-server-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "min_uptime": "10s",
      "max_restarts": 10,
      "restart_delay": 4000
    }
  ]
}
